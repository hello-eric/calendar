<?xml version="1.0" encoding="utf-8"?>
<!--AgendaListView 中用于顶靠的顶部布局 AgendaHeaderView-->
<com.smm.rilidemo.customview.agenda.AgendaHeaderView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_view"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="36dp" >

        <!-- 用于突出日期的圆环 -->
        <View
            android:id="@+id/view_day_circle_selected"
            android:layout_width="0dp"
            android:layout_height="0dp"

            android:visibility="invisible"/>

        <LinearLayout
            android:id="@+id/day_container"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#F2F2F2"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <!-- 日期-->
            <TextView
                android:id="@+id/view_agenda_day_of_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2017年6月2號"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="#85af4b"
                android:textSize="12dp" />

            <!-- 星期-->
            <TextView
                android:id="@+id/view_agenda_day_of_week"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="週五"
                android:textColor="#85af4b"
                android:textSize="12dp" />

        </LinearLayout>

    </FrameLayout>

</com.smm.rilidemo.customview.agenda.AgendaHeaderView>
